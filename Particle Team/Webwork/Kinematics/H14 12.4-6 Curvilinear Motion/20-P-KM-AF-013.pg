Context("Numeric");
#given
$A = random(1, 6, 1);
$B = random(35, 45, 0.5);
$C = random(10, 30, 0.1);
$D = random(0.1,5,0.1);

#computation
$radconb = $B*(pi/180);
$radconc = $C*(pi/180);
$vz = $A*cos($radconc);
$vx = $A*sin($radconc)*cos($radconb);
$vy = $A*sin($radconc)*sin($radconb);
$pz = $vz*$D;
$px = $vx*$D;
$py = $vy*$D;

#set tolerance
Context()->flags->set(
tolerance=>.03,
tolType=>'relative');

