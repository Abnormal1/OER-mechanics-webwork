Context("Numeric");
#given
$A = random(1, 4, 1);
$B = random(5, 7, 1);
$C = random(8, 10, 1);

#computation
$s1 = 1/64*$A - 7/4;
$s2 = 1/64*$B - 7/4;
$s3 = 6.25*($C-8)*(3.25*($C-8)**2 +13);

#set tolerance
Context()->flags->set(
tolerance=>.0003,
tolType=>'relative');

