Context("Numeric");
#given
$A = random(10, 50, 5);
$B = random(75, 125, 25);
$D = random(1, 8, 1);
$C = $B + 5*$D;

#computation
$theta = asin($B/$C);
$r = $B*csc($theta);
$dotr = -$B*csc($theta)*cot($theta);
$dottheta = sqrt( $A**2 /($r**2 + $dotr**2));

#set tolerance
Context()->flags->set(
tolerance=>.003,
tolType=>'relative');

